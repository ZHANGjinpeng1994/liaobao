<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ui_RelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/common_title_bg"
    android:gravity="center_vertical"
    android:textAppearance="@style/TextAppearance.AppCompat.Body1"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/zuobianImageView"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:paddingRight="3dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:src="@mipmap/ic_launcher"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/zuobianTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/zuobianImageView"
        android:text="返回"
        android:visibility="gone" />

    <TextView
        android:id="@+id/zhongjianTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="@dimen/title_size"
         />

    <TextView
        android:id="@+id/youbianTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="14dp"
        android:textSize="@dimen/title_size"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/youbianImageView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:paddingRight="5dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:src="@mipmap/ic_launcher"
        android:visibility="invisible" />
    <ImageView
        android:id="@+id/xiansuotishiImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="-7dp"
        android:layout_alignRight="@id/youbianTextView"
        android:layout_alignTop="@id/youbianTextView"
        android:visibility="invisible" />

</RelativeLayout>